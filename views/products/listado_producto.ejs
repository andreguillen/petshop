<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body id="fondobody">

    <header id="header">
      <%- include('../partials/header') %>
    </header>
    <div class="container-fluid mt-3 mb-3">
        <div class="row g-2">
            <% for(let producto of productos) { %>
            <div class="col-md-4">
                <a href="/products/detail/<%=producto.id %>" >
                <div class="card">
                    
                    <div class="img-container">
                        <div class="d-flex justify-content-between align-items-center p-2 first"> <span class="percent"><%=producto.discount %>% OFF</span></div> <img src="<%=producto.image %>" alt="imagen de producto" class="img-fluid">
                    </div>
                    <div class="product-detail-container">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0"><%=producto.name %></h6> <span class="text-danger font-weight-bold">$<%=producto.price %></span>
                        </div>
                        <div class="mt-3"> <button class="btn btn-danger btn-block">Comprar</button> </div>
                    </div>
                </div>
            </a>
            </div>
            <% } %>
        </div>
    </div>
    </body>
    </html>
    
