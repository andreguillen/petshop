<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>

<body id="fondobody">

    <header id="header">
        <%- include('./partials/header') %>
    </header>

    <main id="fondomain">
        <div class="carrito">
            <h1 id="titulo-carrito">Mi carrito de compras</h1>
            <table class="tabla">
                <thead >
                    <tr id="encabezado">
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio por unidad</th>
                        <th>Importe total de tu compra</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                        
                </tbody>
            </table>
            <section class="total">
                <h4>Total</h4>
                <h4 id="total"></h4>
            </section>
            <section class="pagar">
                <button id="boton-pagar" class="btn btn-info">Pagar</button>
                <a href="/"><button id="boton-seguir" class="btn btn-success">Seguir comprando</button></a><br>
                <button id="boton-vaciar" class="btn btn-danger">Vaciar Carrito</button>
            </section>
            <section class="interesar">
                <h2>Te puede interesar</h2>
            </section>
            <section class="interesar">
                <a href="/products/detail/id"><img id="imagen" src="\img\biscuits-de-pollo-x-500-grs-doy-pack-golocan.jpg"></img></a>
                <a href="/products/detail/id"><img id="imagen" src="\img\collar-perro-grande-l-kikadog-.jpg"></img></a>
                <a href="/products/detail/id"><img id="imagen" src="\img\comedero-inox-n2-16oz-13cm-3203-coi02.jpg"></img></a>
                <a href="/products/detail/id"><img id="imagen" src="\img\pelota-maciza-de-63-mm.jpg"></img></a>
            </section>
        </div>
    </main>

    <footer class="footer">
        <%- include ('./partials/footer') %>    
    </footer>

    <script src="/js/carrito.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> 
</body>
</html>